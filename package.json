{
  "name": "conditor-api",
  "version": "1.0.0",
  "description": "Main api of the Conditor-project",
  "main": "app.js",
  "scripts": {
    "start": "NODE_ENV=production forever start --killSignal SIGINT --uid conditor-api --id conditor-api -a  -e ~/.forever/conditor-api.errors.log app.js",
    "stop": "forever stop conditor-api",
    "dev": "NODE_ENV=development nodemon app.js",
    "test": "export NODE_ENV=test; mocha --recursive"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/conditor-project/api.git"
  },
